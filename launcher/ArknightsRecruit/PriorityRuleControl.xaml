<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="launcher.ArknightsRecruit.PriorityRuleControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid ColumnDefinitions="115,150,115,100,25">
        <ComboBox x:Name="TypesComboBox" Grid.Column="0" HorizontalAlignment="Center" SelectionChanged="TypesComboBox_SelectionChanged"/>
        <ComboBox x:Name="ValuesComboBox" Grid.Column="1" HorizontalAlignment="Center" IsEnabled="False"/>
        <ComboBox x:Name="ActionsComboBox" Grid.Column="2" HorizontalAlignment="Center"/>

        <CheckBox x:Name="GuaranteedCheckBox" MinWidth="0" Grid.Column="3" HorizontalAlignment="Center"/>
        <Button x:Name="RemoveButton" Grid.Column="4" HorizontalAlignment="Right" Padding="0" Click="RemoveButton_Click" BorderThickness="0">
            <Image Width="15" Source="../Assets/remove.png"/>
        </Button>
    </Grid>
</UserControl>
